<!-- views/index.ejs -->

<html>
<head>
  <title>Express OIDC Example</title>
</head>
<body>
  <h1>Welcome to the Express OIDC Example</h1>

  <% if (user) { %>
    <p>Logged in as <%= user.email %></p>
    <p><a href="/profile">Profile</a></p>
  <% } else { %>
    <p><a href="/login">Login</a></p>
  <% } %>
</body>
</html>
